<%= render 'layouts/header' %>
<div class="container">
<div class="row">
<div class="col-md-8 col-md-offset-2">
<div class="form-user style-1 rounded has-shadow-1">

      <div class="form-header text-center "style="padding-top: 50px;padding-bottom: 20px;">
        <h2>Sign up</h2>
      </div>
      <div class="col-md-8 col-md-offset-2">
      <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="form-body">


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="col-md-12 col-md-offset-2">

          <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
              <div class="col-md-9"><%= f.label :ユーザー名 %></div>
              <div class="col-md-9"><%= f.text_field :name, autofocus: true, autocomplete: "name", :size  => "50",  class: "form-control" %></div>
          </div>


            <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
                <div class="col-md-9"><%= f.label :email %></div>
                <div class="col-md-9"><%= f.email_field :email, autofocus: true, autocomplete: "email", :size  => "50",  class: "form-control" %></div>
            </div>

            <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
                <div class="col-md-9"><%= f.label :password %><p>(<%= @minimum_password_length %> characters minimum)</p></div>
                <% if @minimum_password_length %>
                <% end %>
                <div class="col-md-9"><%= f.password_field :password, autocomplete: "new-password",  class: "form-control" %></div>
            </div>

            <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
                <div class="col-md-9"><%= f.label :password_confirmation %></div>
                <div class="col-md-9"><%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control" %></div>
            </div>

            <div class="actions" style="padding-top: 20px;margin-top: 20px;">
                <div class="col-md-9"><%= f.submit "Sign up", class: "btn btn-info", style:"width:100%;"  %></div>
            </div>

        </div>
        <% end %>

      </div>
</div>
</div>
</div>
</div>
